<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/product_name"
            style="@style/text_product"
            />

        <TextView
            android:text="@string/product_price"
            style="@style/text_product"
            />

        <TextView
            android:text="@string/product_quantity"
            style="@style/text_product"
            />

        <TextView
            android:text="@string/supplier_name"
            style="@style/text_product"
            />

        <TextView
            android:text="@string/supplier_email"
            style="@style/text_product"
            />

        <TextView
            android:text="@string/supplier_number"
            style="@style/text_product"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_name"
            style="@style/text_product"
            />

        <TextView
            android:id="@+id/text_price"
            style="@style/text_product"
            />

        <TextView
            android:id="@+id/text_quantity"
            style="@style/text_product"
            />

        <TextView
            android:id="@+id/text_supplier_name"
            style="@style/text_product"
            />

        <TextView
            android:id="@+id/text_supplier_email"
            style="@style/text_product"
            />

        <TextView
            android:id="@+id/text_supplier_number"
            style="@style/text_product"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/add_quantity_button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            />

        <Button
            android:id="@+id/reduce_quantity_button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reduce"/>
    </LinearLayout>


</LinearLayout>